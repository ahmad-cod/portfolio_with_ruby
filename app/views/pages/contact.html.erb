<h1 class= "my-6">Contact Me</h1>
<%= form_with model: @message, url: '/contact', method: :post do |form| %>
  <div>
    <%= form.label :name, "Full Name" %>
    <%= form.text_field :name, class: "border rounded" %>
  </div>

  <div>
    <%= form.label :email, "Email" %>
    <%= form.email_field :email, class: "border rounded" %>
  </div>

  <div>
    <%= form.label :subject, "Subject" %>
    <%= form.text_field :subject, class: "border rounded" %>
  </div>

  <div>
    <%= form.label :message, "Message" %>
    <form.textarea :message, rows:5, class: "border rounded" %>
  </div>

  <%= form.submit "Send Message", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded btn-primary" %>
<% end %>